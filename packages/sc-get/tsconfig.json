{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es2017"
      ],
      "declaration": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }